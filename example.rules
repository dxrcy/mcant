ant
    use staircase;
end

ant
    use tower;
end

ruleset staircase
    initial, air             , -> initial,  air,   down;
    initial, dirt/grass/stone, -> stairup,  stone, up;
    stairup,                 , -> stairout, stone, west;
    stairout,                , -> stairup,  stone, up;
end

ruleset tower
    initial, air             , -> initial,  air,   down;
    initial, dirt/grass/stone, -> towerup,  stone, up;
    towerup,                 , -> towerup,  stone, up;
end

